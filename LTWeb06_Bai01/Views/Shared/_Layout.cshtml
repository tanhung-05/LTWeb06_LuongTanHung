@{ var user = Session["User"] as LTWeb06_Bai01.Models.User;}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar-nav > li {
            margin-left: 200px;
        }

        .dropdown {
            position: relative;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 180px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            border-radius: 4px;
            z-index: 1;
        }

            .dropdown-content li a {
                color: black;
                text-decoration: none;
                padding: 12px 16px;
            }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown-content {
            list-style: none;
            padding: 0;
            margin: 0;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="dropdown">
                        <a href="#" class="dropbtn nav-link">Thông tin ▼</a>
                        <ul class="dropdown-content">
                            <li><a href="#">Xem giỏ hàng</a></li>
                            <li>
                                @if (user != null)
                                {
                                    @Html.ActionLink("Lịch sử giao dịch", "HoaDonKhachHang", "User", new { id = user.MaKhachHang.Trim() }, null)
                                }
                                else
                                {
                                    <a href="#">Lịch sử giao dịch</a>
                                }
                            </li>
                            <li> @Html.ActionLink("Tìm kiếm sản phẩm", "Search", "SanPham")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Diễn đàn", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Liên hệ", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content row">
        <div class="col-3">
            @Html.Action("_Menu", "Loai")
        </div>
        <div class="col-9">
            <div class="text-end">
                @Html.ActionLink("Đăng nhập", "Login", "User", new { returnUrl = Request.RawUrl }, new { @class = "btn" })
                @Html.ActionLink("Đăng ký", "Register", "User", new { returnUrl = Request.RawUrl }, new { @class = "btn" })

                <div>

                    @if (user != null)
                    {
                        <p>Chào bạn, @user.TenKhachHang</p>
                    }
                </div>
            </div>
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
